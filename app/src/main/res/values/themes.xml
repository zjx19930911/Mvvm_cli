<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/qmui_s_transparent</item>
        <!-- Customize your theme here. -->
        <item name="qmui_topbar_height">44dp</item>
        <item name="QMUITopBarStyle">@style/QTopBar</item>
    </style>
    <style name="QTopBar" parent="QMUI.TopBar">
        <item name="android:background">@color/teal_200</item>
        <item name="qmui_topbar_title_text_size">17sp</item>
        <item name="qmui_topbar_title_color">@color/white</item>
    </style>
</resources>